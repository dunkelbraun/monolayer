{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["src/api/*.ts"],

	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"outDir": "./../../build/local/pg",
		"tsBuildInfoFile": "./../../build/local/pg/tsconfig.build.tsbuildinfo",
		"paths": {
			"~pg/*": ["src/*"]
		},
		"composite": true,
		"emitDeclarationOnly": true,
		"declaration": true
	},
	"references": [{ "path": "../utils" }]
}
