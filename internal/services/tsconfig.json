{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": ["src/**/*", "tests/**/*"],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"outDir": "./../../build/local/services",
		"tsBuildInfoFile": "./../../build/local/services/tsconfig.build.services.tsbuildinfo",
		"composite": true,
		"paths": {
			"~services/*": ["src/*"]
		},
		"emitDeclarationOnly": true,
		"declaration": true
	},
	"references": [
		{ "path": "../base" },
		{ "path": "../migrator" },
		{ "path": "../pg" },
		{ "path": "../programs" },
		{ "path": "../state" }
	]
}
