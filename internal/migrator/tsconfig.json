{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": ["src/**/*", "tests/**/*"],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"outDir": "./../../build/local/migrator",
		"tsBuildInfoFile": "./../../build/local/migrator/tsconfig.build.tsbuildinfo",
		"paths": {
			"~migrator/*": ["src/*"]
		},
		"composite": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"allowJs": true
	},
	"references": [
		{ "path": "../base" },
		{ "path": "../pg" },
		{ "path": "../utils" }
	]
}
