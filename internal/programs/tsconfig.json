{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": ["**/src/**/*", "**/tests/**/*", "**/__test_setup__/**/*"],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"outDir": "./../../build/local/programs",
		"tsBuildInfoFile": "./../../build/local/programs/tsconfig.build.tsbuildinfo",
		"paths": {
			"~programs/*": ["src/*"]
		},
		"composite": true,
		"emitDeclarationOnly": true,
		"declaration": true
	},
	"references": [
		{ "path": "../base" },
		{ "path": "../pg" },
		{ "path": "../prompts" },
		{ "path": "../migrator" },
		{ "path": "../services" },
		{ "path": "../state" }
	]
}
