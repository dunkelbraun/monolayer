{
	"compilerOptions": {
		"rootDir": "",
		"paths": {
			"~monolayer/*": ["*"],
			"~cli/*": ["packages/cli/*"],
			"~configuration/*": ["packages/configuration/*"],
			"~migrator/*": ["packages/migrator/*"],
			"~pg/*": ["packages/pg/*"],
			"~programs/*": ["packages/programs/*"],
			"~services/*": ["packages/services/*"],
			"~state/*": ["packages/state/*"],
			"~utils/*": ["packages/utils/*"],
			"@monorepo/cli/*": ["packages/cli/*"],
			"@monorepo/configuration/*": ["packages/configuration/*"],
			"@monorepo/migrator/*": ["packages/migrator/*"],
			"@monorepo/pg/*": ["packages/pg/*"],
			"@monorepo/programs/*": ["packages/programs/*"],
			"@monorepo/services/*": ["packages/services/*"],
			"@monorepo/state/*": ["packages/state/*"],
			"@monorepo/utils/*": ["packages/utils/*"]
		}
	},
	"references": [
		{ "path": "../../internal/cli" },
		{ "path": "../../internal/configuration" },
		{ "path": "../../internal/migrator" },
		{ "path": "../../internal/pg" },
