{
	"extends": ["@monorepo/typescript-config/tsconfig.base.json"],
	"include": [
		"**/src/**/*",
		"**/tests/**/*",
		"../../private/refactorings/src/schema-refactor.ts"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": ".",
		"paths": {
			"~monolayer/*": ["src/*"],
			"~tests/*": ["tests/*"],
			"@monorepo/prompts/*": ["./../../internal/prompts/src/*"]
		},
		"outDir": "./dist",
		"emitDeclarationOnly": true,
		"declaration": true
	},
	"references": [
		{ "path": "../../internal/base" },
		{ "path": "../../internal/cli" },
		{ "path": "../../internal/configuration" },
		{ "path": "../../internal/migrator" },
		{ "path": "../../internal/pg" },
		{ "path": "../../internal/prompts" },
		{ "path": "../../internal/programs" },
		{ "path": "../../internal/services" },
		{ "path": "../../internal/utils" },
		{ "path": "../../internal/state" },
		{ "path": "../../private/refactorings" }
	]
}
