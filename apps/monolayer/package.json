{
	"name": "monolayer",
	"version": "1.0.0-beta.1",
	"description": "",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"license": "MIT",
	"homepage": "https://github.com/dunkelbraun/monolayer/packages/monolayer",
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/src/index.d.ts",
	"bin": {
		"monolayer": "dist/esm/src/bin/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/esm/src/index.d.ts",
			"default": "./dist/esm/src/index.js"
		},
		"./configuration": {
			"types": "./dist/esm/src/configuration.d.ts",
			"default": "./dist/esm/src/configuration.js"
		},
		"./helpers/pg": {
			"types": "./dist/esm/src/helpers.d.ts",
			"default": "./dist/esm/src/helpers.js"
		},
		"./pg": {
			"types": "./dist/esm/src/pg.d.ts",
			"default": "./dist/esm/src/pg.js"
		},
		"./migration": {
			"types": "./dist/esm/src/migration.d.ts",
			"default": "./dist/esm/src/migration.js"
		},
		"./zod": {
			"types": "./dist/esm/src/zod.d.ts",
			"default": "./dist/esm/src/zod.js"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts",
		"dist/**/*.js.map"
	],
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "npm run build:esm",
		"build:cjs": "tsc -p tsconfig.build.cjs.json --outDir dist/cjs",
		"build:esm": "tsc -p tsconfig.build.esm.json --outDir dist/esm",
		"postbuild": "npm run postbuild:copy-internal-packages && npm run postbuild:copy-private-packages && npm run postbuild:makeexec && npm run postbuild:packageesm && npm run postbuild:transform-paths",
		"postbuild:copy-internal-packages": "mkdir -p dist/esm/packages/internal && cp -r ./../../internal/utils/dist/src dist/esm/packages/internal/utils",
		"postbuild:copy-private-packages": "mkdir -p dist/esm/packages/private && cp -r ./../../private/refactorings/dist/src dist/esm/packages/private/refactorings",
		"postbuild:transform-paths": "tsc-alias -p tsconfig.build.esm.json --outDir dist/esm",
		"postbuild:makeexec": "chmod +x dist/esm/src/bin/cli.js",
		"postbuild:packageesm": "echo '{\n  \"type\": \"module\"\n}' > dist/esm/src/package.json",
		"check": "npm run check:type && npm run check:prettier && npm run check:lint && npm run check:skott",
		"check:lint": "npx eslint .",
		"check:prettier": "prettier --check .",
		"check:skott": "skott --displayMode=file-tree --showCircularDependencies --no-trackTypeOnlyDependencies --cwd src",
		"check:type": "tsc --noEmit",
		"cli": "src/cli/cli.ts",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"package": "npm pack --pack-destination ./build",
		"publish:local": "npm publish --registry http://localhost:4873",
		"test": "./tests/__setup__/bin/run-tests",
		"test:watch": "vitest ${TEST_FILE:-tests} --pool=forks --watch --ui --open",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 monolayer -f"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/dunkelbraun/monolayer.git"
	},
	"bugs": {
		"url": "https://github.com/dunkelbraun/monolayer/issues"
	},
	"devDependencies": {
		"@monorepo/eslint-config": "*",
		"@monorepo/typescript-config": "*",
		"@monorepo/refactorings": "*",
		"@monorepo/utils": "*",
		"@types/capture-console": "^1.0.5",
		"@types/jscodeshift": "^0.11.11",
		"@types/mock-fs": "^4.13.4",
		"@types/node": "^18.0.0",
		"@types/nunjucks": "^3.2.6",
		"@types/pg": "^8.11.0",
		"@types/slug": "^5.0.7",
		"@types/toposort": "^2.0.7",
		"@vitest/coverage-istanbul": "=1.4.0",
		"@vitest/ui": "=1.4.0",
		"capture-console": "^1.0.2",
		"dotenv": "^16.4.1",
		"kysely": "^0.27.4",
		"kysely-0270": "npm:kysely@^0.27.0",
		"kysely-0271": "npm:kysely@^0.27.1",
		"kysely-0272": "npm:kysely@^0.27.2",
		"kysely-0273": "npm:kysely@^0.27.3",
		"mock-fs": "^5.2.0",
		"mock-stdin": "^1.0.0",
		"pg": ">=8.11.3",
		"postcss": "^8.4.35",
		"skott": "^0.33.2",
		"type-fest": "^4.10.1",
		"type-testing": "^0.2.0",
		"vite-tsconfig-paths": "^4.3.1",
		"vitest": "=1.4.0"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@commander-js/extra-typings": "^12.0.1",
		"case-anything": "^2.1.13",
		"commander": "12.0.0",
		"effect": "^3.0.7",
		"execa": "^8.0.1",
		"ip-address": "^9.0.5",
		"jscodeshift": "^0.15.2",
		"microdiff": "^1.3.2",
		"nunjucks": "^3.2.4",
		"pg-connection-string": "^2.6.3",
		"picocolors": "^1.0.0",
		"slug": "^8.2.3",
		"toposort": "^2.0.2",
		"tsx": "^4.7.0",
		"zod": "^3.22.2"
	},
	"peerDependencies": {
		"kysely": "^0.27.3",
		"pg": ">=8.11.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
