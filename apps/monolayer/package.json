{
	"name": "monolayer",
	"version": "1.0.0-beta.1",
	"description": "",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"license": "MIT",
	"homepage": "https://github.com/dunkelbraun/monolayer/packages/monolayer",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"bin": {
		"monolayer": "./dist/esm/bin/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"default": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./configuration": {
			"types": "./dist/esm/configuration.d.ts",
			"default": "./dist/esm/configuration.js",
			"require": "./dist/cjs/configuration.js"
		},
		"./helpers/pg": {
			"types": "./dist/esm/helpers.d.ts",
			"default": "./dist/esm/helpers.js",
			"require": "./dist/cjs/helper.js"
		},
		"./pg": {
			"types": "./dist/pg.d.ts",
			"default": "./dist/esm/pg.js",
			"require": "./dist/cjs/pg.js"
		},
		"./migration": {
			"types": "./dist/migration.d.ts",
			"default": "./dist/esm/migration.js",
			"require": "./dist/cjs/migration.js"
		},
		"./zod": {
			"types": "./dist/zod.d.ts",
			"default": "./dist/esm/zod.js",
			"require": "./dist/cjs/zod.js"
		}
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts"
	],
	"scripts": {
		"prebuild": "rm -rf dist/*",
		"build": "tsc -b tsconfig.build.json && tsc -b tsconfig.build.cjs.json",
		"postbuild": "npm run alias && npm run makeexec && npm run makepackage",
		"alias": "tsc-alias -p tsconfig.alias.json --outDir dist/esm --verbose && tsc-alias -p tsconfig.alias.json --outDir dist/cjs --verbose",
		"makeexec": "chmod +x dist/esm/bin/cli.js",
		"makepackage": "echo '{\n  \"type\": \"module\"\n}' > dist/esm/package.json && echo '{\n  \"type\": \"commonjs\"\n}' > dist/cjs/package.json",
		"check": "npm run check:prettier && npm run check:lint && npm run check:skott",
		"check:lint": "npx eslint .",
		"check:prettier": "prettier --check .",
		"check:skott": "skott --displayMode=file-tree --showCircularDependencies --no-trackTypeOnlyDependencies --cwd src",
		"cli": "src/cli/cli.ts",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"package": "npm pack --pack-destination ./build",
		"publish:local": "npm publish --registry http://localhost:4873",
		"test": "vitest tests --run --coverage --pool=forks --passWithNoTests",
		"test:watch": "vitest ${TEST_FILE:-tests} --pool=forks --watch --ui --open",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 monolayer -f"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/dunkelbraun/monolayer.git"
	},
	"bugs": {
		"url": "https://github.com/dunkelbraun/monolayer/issues"
	},
	"devDependencies": {
		"@config/testing": "*",
		"@monorepo/base": "*",
		"@monorepo/cli": "*",
		"@monorepo/configuration": "*",
		"@monorepo/eslint-config": "*",
		"@monorepo/migrator": "*",
		"@monorepo/prompts": "*",
		"@monorepo/services": "*",
		"@monorepo/state": "*",
		"@monorepo/refactorings": "*",
		"@monorepo/typescript-config": "*",
		"@monorepo/utils": "*",
		"@monorepo/pg": "*",
		"@monorepo/programs": "*",
		"@types/capture-console": "^1.0.5",
		"@types/jscodeshift": "^0.11.11",
		"@types/mock-fs": "^4.13.4",
		"@types/node": "^18.0.0",
		"@types/nunjucks": "^3.2.6",
		"@types/pg": "^8.11.0",
		"@types/slug": "^5.0.7",
		"@types/toposort": "^2.0.7",
		"capture-console": "^1.0.2",
		"dotenv": "^16.4.1",
		"kysely": "^0.27.3",
		"mock-fs": "^5.2.0",
		"mock-stdin": "^1.0.0",
		"pg": ">=8.11.3",
		"postcss": "^8.4.35",
		"type-fest": "^4.10.1",
		"type-testing": "^0.2.0",
		"vite-tsconfig-paths": "^4.3.1"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@commander-js/extra-typings": "^12.0.1",
		"case-anything": "^2.1.13",
		"commander": "12.0.0",
		"dotenv": "^16.4.5",
		"effect": "^3.0.7",
		"execa": "^8.0.1",
		"ip-address": "^9.0.5",
		"jscodeshift": "^0.15.2",
		"microdiff": "^1.3.2",
		"nunjucks": "^3.2.4",
		"pg-connection-string": "^2.6.3",
		"picocolors": "^1.0.0",
		"slug": "^8.2.3",
		"toposort": "^2.0.2",
		"tsx": "^4.7.0",
		"zod": "^3.22.2"
	},
	"peerDependencies": {
		"kysely": "^0.27.3",
		"pg": ">=8.11.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
