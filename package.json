{
  "name": "monolayer-monorepo",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "__config__/*",
    "apps/create-monolayer",
    "apps/monolayer",
    "internal/*",
    "private/*",
    "docs"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "useTabs": true,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@config/testing": "*",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "mermaid": "^10.9.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "search-insights": "^2.17.0",
    "turbo": "^2.0.14",
    "turbo-ignore": "^2.0.12",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^4.2.3",
    "typedoc-vitepress-theme": "^1.0.1",
    "typescript": "^5.5.4",
    "vite-plugin-dynamic-import": "^1.5.0",
    "vitepress": "^1.3.2",
    "vitepress-plugin-mermaid": "^2.0.16",
    "vitepress-sidebar": "^1.24.2",
    "vitest": "^2.0.5"
  },
  "packageManager": "^npm@10.8.2",
  "scripts": {
    "test": "NO_COLOR=1 vitest",
    "test:watch": "NO_COLOR=1 vitest ${TEST_FILE} --pool=forks --watch --ui --open=false",
    "typedoc": "typedoc --docsRoot docs/reference",
    "typedoc:watch": "npm run typedoc -- --watch",
    "postinstall": "patch-package",
    "predocs": "npm run typedoc",
    "docs": "npm-run-all --parallel docs:dev typedoc:watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  }
}
